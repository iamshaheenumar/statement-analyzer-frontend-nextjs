generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Statement {
  id          String    @id
  bank        String
  from_date   DateTime?
  to_date     DateTime?
  card_type   String?
  recordCount Int
  totalDebit  Decimal
  totalCredit Decimal
  netChange   Decimal
  createdAt   DateTime  @default(now())

  transactions Transaction[]
}

model Transaction {
  id          Int       @id @default(autoincrement())
  statementId String
  statement   Statement @relation(fields: [statementId], references: [id], onDelete: Cascade)

  transactionDate DateTime?
  description     String?
  debit           Decimal?
  credit          Decimal?
  amount          Decimal?
  bank            String?
}
